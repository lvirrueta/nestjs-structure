{
  "version": "0.2.0",
  "configurations": [
      // Debugg - WS
      {
          "name": "Debug - WS",
          "port": 9229,
          "request": "attach",
          "skipFiles": [
              "<node_internals>/**"
          ],
          "type": "node",
          "restart": true
      },
      // debug Node
      {
          "type": "node",
          "request": "launch",
          "name": "Debug Nest Framework",
          "args": [
              "${workspaceFolder}/src/main.ts"
          ],
          "runtimeArgs": [
              "--nolazy",
              "-r",
              "ts-node/register",
              "-r",
              "tsconfig-paths/register"
          ],
          "sourceMaps": true,
          "envFile": "${workspaceFolder}/.env",
          "cwd": "${workspaceRoot}",
          "console": "integratedTerminal",
          "protocol": "inspector"
      }
  ]
}
